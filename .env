# Playwright Pytest Framework - Environment Configuration
# This file contains all environment variables for browser settings, credentials, and test configuration
# Last updated: 2025-12-15

# ==========================================
# BROWSER SETTINGS
# ==========================================

# Browser type: chromium, firefox, webkit
BROWSER_TYPE=chromium

# Browser launch options
HEADLESS=true
SLOW_MO=0

# Browser viewport settings
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Browser timeout settings (in milliseconds)
BROWSER_LAUNCH_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=30000

# ==========================================
# BASE URL CONFIGURATION
# ==========================================

# Base URL for the application under test
BASE_URL=https://example.com

# Alternative environments
STAGING_URL=https://staging.example.com
DEV_URL=https://dev.example.com
PROD_URL=https://prod.example.com

# ==========================================
# AUTHENTICATION CREDENTIALS
# ==========================================

# Default test user credentials
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=securePassword123!

# Admin user credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=adminPassword123!

# Guest user credentials
GUEST_EMAIL=guest@example.com
GUEST_PASSWORD=guestPassword123!

# ==========================================
# TIMEOUT SETTINGS (in milliseconds)
# ==========================================

# Action timeouts
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000
WAIT_FOR_SELECTOR_TIMEOUT=10000
WAIT_FOR_ELEMENT_TIMEOUT=5000

# Implicit waits
IMPLICIT_WAIT=5000

# Custom timeouts for specific operations
UPLOAD_TIMEOUT=15000
DOWNLOAD_TIMEOUT=30000

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path and naming
LOG_DIR=logs
LOG_FILE=test_execution.log
LOG_FILE_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Enable/disable console logging
CONSOLE_LOGGING=true

# Enable/disable file logging
FILE_LOGGING=true

# Maximum log file size (in bytes) - 0 means unlimited
MAX_LOG_SIZE=10485760

# Number of backup log files to keep
BACKUP_LOG_COUNT=5

# Enable screenshot on failure
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_DIR=screenshots

# Enable video recording
VIDEO_RECORDING=true
VIDEO_DIR=videos

# Enable trace recording for debugging
TRACE_RECORDING=false
TRACE_DIR=traces

# ==========================================
# TEST EXECUTION SETTINGS
# ==========================================

# Number of parallel workers for test execution
WORKERS=4

# Retry failed tests
RETRIES=1

# Test execution mode: headed, headless, debug
EXECUTION_MODE=headless

# ==========================================
# PROXY SETTINGS (optional)
# ==========================================

# Enable proxy if needed
USE_PROXY=false
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# ==========================================
# API TESTING CONFIGURATION (optional)
# ==========================================

# API base URL
API_BASE_URL=https://api.example.com
API_TIMEOUT=10000
API_RETRIES=2

# ==========================================
# SECURITY AND COMPLIANCE
# ==========================================

# Sensitive data masking in logs
MASK_SENSITIVE_DATA=true

# Enable/disable SSL verification
SSL_VERIFY=true

# ==========================================
# CUSTOM SETTINGS
# ==========================================

# Application-specific settings
APP_NAME=MyApplication
APP_VERSION=1.0.0
ENVIRONMENT=staging

# Feature flags
ENABLE_FEATURE_A=true
ENABLE_FEATURE_B=false
